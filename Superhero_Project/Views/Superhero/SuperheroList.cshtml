@model IEnumerable<Superhero_Project.Models.Superhero>

@{
    ViewBag.Title = "SuperheroList";
}

<h2>SuperheroList</h2>

<p>
    @Html.ActionLink("Create New", "SuperheroCreate")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink("create", "SuperheroCreate", new { id = item.Id }) |
            @Html.ActionLink("Edit", "SuperheroEdit", new { id=item.Id }) |
            @Html.ActionLink("Details", "SuperheroDetails", new { id=item.Id }) |
            @Html.ActionLink("Delete", "SuperheroDelete", new { id=item.Id })
        </td>
    </tr>
}

</table>
